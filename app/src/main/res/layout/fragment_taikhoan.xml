<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TaikhoanFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="#FAF9F9">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"

                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/imge1" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="28dp"
                android:text="Quang Minh"
                android:textColor="#070707"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="60dp"
                android:text="Khách hàng tìm năng"
                android:textColor="#070707"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="350dp"

                android:layout_marginTop="32dp"
                app:srcCompat="@drawable/icon" />

        </RelativeLayout>

        <!-- Content below header and above footer -->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/header"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="0dp"
            android:background="#EFF3EF">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/background_light"
                android:drawableLeft="@drawable/star"
                android:freezesText="false"
                android:gravity="left|center"
                android:text="    The Coffee House Rewards"
                android:textAllCaps="false"
                android:textColorHint="#FAFBFB"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="55dp"
                android:background="@android:color/background_light"
                android:drawableLeft="@drawable/person"
                android:gravity="left|center"


                android:text="    Thông tin tài khoản"
                android:textAllCaps="false"
                android:textColorHint="#FAFBFB"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="100dp"
                android:background="@android:color/background_light"
                android:drawableLeft="@drawable/music"
                android:gravity="left|center"

                android:text="    Nhạc đang phát"
                android:textAllCaps="false"
                android:textColorHint="#FAFBFB"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="145dp"
                android:background="@android:color/background_light"
                android:drawableLeft="@drawable/history"
                android:gravity="left|center"

                android:text="    Lịch sử"
                android:textAllCaps="false"
                android:textColorHint="#FAFBFB"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="190dp"
                android:background="@android:color/background_light"
                android:drawableLeft="@drawable/help"
                android:gravity="left|center"

                android:text="    Giúp đỡ"
                android:textAllCaps="false"
                android:textColorHint="#FAFBFB"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="235dp"
                android:background="@android:color/background_light"
                android:drawableLeft="@drawable/setting"
                android:gravity="left|center"

                android:text="    Cài đặt"
                android:textAllCaps="false"
                android:textColorHint="#FAFBFB"
                android:textSize="16dp" />

            <Button
                android:id="@+id/button_DangXuat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:textColor="#000"
                android:layout_marginTop="300dp"/>

        </RelativeLayout>
    </RelativeLayout>


</FrameLayout>